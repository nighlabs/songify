# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# Required - Security
JWT_SECRET=generate-a-secure-random-string-here  # gitleaks:allow
ADMIN_PORTAL_PASSWORD=choose-a-strong-password  # gitleaks:allow

# Required - Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id  # gitleaks:allow
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret  # gitleaks:allow

# Optional - Token durations
ADMIN_TOKEN_DURATION=168h
FRIEND_TOKEN_DURATION=12h

# Optional - Rate limiting
RATE_LIMIT_PER_MINUTE=10

# Optional - Host port (default: 3000)
PORT=3000

# Optional - Sentry error tracking (disabled when not set)
# SENTRY_DSN=
# SENTRY_DSN_FRONTEND=
# SENTRY_ENVIRONMENT=production
